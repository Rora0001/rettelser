const { myData } = Astro.props;
console.log(myData);
---

<Layout title="something">
  <div class="content">
    <!-- Billede sektion -->
    <div class="image-section">
      <img src={myData.Image} alt="Product Image" />
    </div>

    <!-- Tekst sektion -->
    <div class="text-section">
      <div class="first-line">
        <h1>{myData.Name}</h1>
        <h1>DKK {myData.Price} ,-</h1>
      </div>
      <div class="second-line">
        <h3>{myData.Format} cm.</h3>
        <Buttons variant="primary" size="small">BUY NOW</Buttons>
      </div>
      <h4>Description</h4>
      <p>{myData.Description}</p>
      <div class="læs-knap">
        <ul>
          <li><a href="/shop">← BACK</a></li>
        </ul>
      </div>
    </div>
  </div>
  <Footer />
</Layout>

<script>
  const buyButton = document.querySelector(".buy-button");
  buyButton.addEventListener("click", function () {
    alert("Tak for dit køb!");
  });
</script>

<style>
  .first-line,
  .second-line {
    display: flex;
    justify-content: space-between;
    width: 100%;
    padding: 1 0.5rem 1rem;
  }

  .content img {
    width: 100%;
    margin-bottom: 1rem;
    margin-top: 4rem;
  }

  .content {
    text-align: center;
    padding: 2rem;
    display: grid;
    grid-template-columns: 1fr;
  }

  .content h1 {
    font-size: 1.2rem;
    margin-top: -5rem;
  }

  .content h3 {
    font-size: 1rem;
  }

  .content h4 {
    text-align: left;
    font-size: 1.1rem;
    padding-bottom: 1rem;
  }

