---
import "../css/style.css";
const { text, describtion, imageSrc, describtion2, describtion3 } = Astro.props;
---

<div class="sektion">
  <div class="component1">
    <h2>{text}</h2>
    <p>{describtion}</p>
    <p>{describtion2}</p>
    <p>{describtion3}</p>
  </div>
  <div class="img">
    <div class="img"><img src={imageSrc} /></div>
  </div>
</div>

<style>
  .sektion {
    display: flex;
    flex-direction: column;
    text-align: left;
    margin: 60px 60px 0;
  }

  .component1 {
    margin-bottom: 20px;
  }

  .component1 overskrift {
    font-size: 1.5rem;
    font-weight: 800;
  }

  .component1 p {
    padding-top: 32px;
  }

  .img img {
    max-width: 100%;
    height: auto;
  }

  /* Media query for desktop */
  @media (min-width: 1200px) {
    .sektion {
      flex-direction: row;
      align-items: flex-start;
      margin: 60px;
    }

    .component1 {
      flex: 1;
      margin-right: 20px;
      margin-bottom: 0;
    }

    .img {
      flex: 1;
    }

    .img img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    .component1 p {
      margin-right: 40px;
    }
  }
</style>
