---
const { variant, size } = Astro.props;
---

<button class={variant + " " + size}><slot /></button>

<style>
  button {
    padding: 16px;
    margin-bottom: 4rem;
  }
  .hide {
    display: none;
  }

  .primary {
    padding: 8px 32px;
    background-color: transparent;
    color: black;
    border: 1px solid black;
    cursor: pointer;
    transition:
      background-color 0.3s,
      color 0.3s;
  }

  .more {
    padding: 8px 32px;
    background-color: transparent;
    color: black;
    border: 1px solid black;
    cursor: pointer;
    transition:
      background-color 0.3s,
      color 0.3s;
  }

  .primary:hover {
    background-color: #e7d9d9;
    color: black;
  }

  .all {
    font-size: 16px;
    margin-left: 160px;
    margin-right: 160px;
    align-self: center;
  }

  .shoppage {
    font-size: 10px;
  }

  @media (min-width: 768px) {
    .all {
      font-size: 16px;
      width: fit-content;
    }
  }
</style>
