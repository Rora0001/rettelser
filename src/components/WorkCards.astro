---
import WorkCardButton from "./WorkCardButton.astro";

const { data } = Astro.props;
---

<article>
  <div>
    <h3>{data.title}</h3>
    <p>{data.subtitles}</p>
    <img class="lillebillede" src={data.lillebillede} alt={data.lillebillede} />
  </div>
  <img src={data.cardImages} alt={data.cardImages} />
</article>

<style>
  .lillebillede {
    width: 50%;
    padding-left: 10px;
    display: none;
  }

  h3 {
    font-size: 2.2rem;
    padding: 10px;
  }

  p {
    font-size: 1.2rem;
    padding: 10px;
    margin-bottom: 130px;
  }

  @media (min-width: 768px) {
    article {
      display: flex;
      flex-direction: column;
      height: 100vh;
    }
    div {
      display: grid;
      grid-template-columns: 1fr 1fr;
    }

    .lillebillede {
      width: 50%;
      display: block;
    }

    h3 {
      font-size: 1rem;
    }

    p {
      font-size: 0xs.8rem;
    }
  }
</style>

