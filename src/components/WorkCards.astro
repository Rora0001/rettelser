---
import WorkCardButton from "./WorkCardButton.astro";
const { data } = Astro.props;
---

<article>
  <div>
    <h3>{data.title}</h3>
    <p>{data.subtitles}</p>
    <img class="lillebillede" src={data.lillebillede} alt="Lille billede" />
  </div>
  <div>
    <img src={data.cardImages} alt="Card billede" />
  </div>
</article>

<style>
  article {
    display: flex;
    flex-direction: column;
    margin: 20px;
    width: 100%;
  }

  article div {
    order: 1;
    justify-content: end;
  }

  article:nth-child(odd) div {
    margin-right: 50px;
    justify-content: end;
    order: 1;
  }

  article img.stort-billede {
    height: 600px;
    width: 50%;
    object-fit: cover;
  }

  h3 {
    margin: 10px 0;
  }

  p {
    margin: 10px 0;
  }

  /* Mobil styling */
  @media (max-width: 768px) {
    .lillebillede {
      display: none;
    }
  }

  /* Desktop styling */
  @media (min-width: 769px) {
    article {
      flex-direction: row;
    }

    article > div {
      width: 50%;
      margin-right: 20px;
    }

    article div {
      display: flex;
      flex-direction: column;
      align-self: start;
      order: -1;
    }

    article:nth-child(even) div {
      order: -1;
    }

    .lillebillede {
      display: block;
      max-width: 100px;
      margin: 10px 0;
    }

    img[src*="data.cardImages"] {
      flex: 2;
    }
  }
</style>

