---
import "../css/style.css";
---

<footer>
  <div class="footer-section">
    <h3>Contact me:</h3>
    <p>Telefon: +45 20 20 20 20</p>
    <p>Email: christina@winslow.com</p>
  </div>
  <div class="footer-section">
    <h3>Help</h3>
    <p>Terms & conditions</p>
    <p>Privacy policy</p>
    <p>Shipping and returns</p>
  </div>
  <div class="social-icons">
    <a href="https://www.instagram.com/christinawinslov/" target="_blank">
      <img src="public/billeder/icons8-instagram-2.svg" alt="Instagram" />
    </a>
    <a href="https://www.facebook.com/din-facebook-side" target="_blank">
      <img src="public/billeder/icons8-facebook-2.svg" alt="Facebook" />
    </a>
  </div>
</footer>

<style>
  footer {
    position: relative;
    width: 100%;
    bottom: 0;
    background-color: #e7d9d9;
    padding: 20px;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-top: auto;
  }

  .footer-section {
    flex-basis: 100%;
    text-align: center;
    margin-bottom: auto;
  }

  @media (min-width: 768px) {
    .footer-section {
      flex-basis: calc(50% - 20px);
    }

    .social-icons {
      order: 1; /* Flyt social-icons til venstre */
      text-align: left;
    }
  }

  @media (min-width: 1200px) {
    .footer-section {
      flex-basis: calc(33.33% - 20px);
    }

    .social-icons {
      order: 2; /* Behold social-icons til h√∏jre */
      text-align: right;
    }
  }

  footer .footer-section h3 {
    color: black;
  }

  footer .social-icons img {
    width: 50px;
    height: 50px;
    margin-left: 10px;
  }

  p {
    font-size: 11px;
  }
</style>
